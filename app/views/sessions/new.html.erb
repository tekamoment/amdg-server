<div class="mdl-grid demo-content">
    <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
        <div class="mdl-card mdl-cell mdl-cell--12-col">
          <div class="mdl-card__supporting-text mdl-grid">

            <div class="mdl-card__title mdl-cell mdl-cell--12-col mdl-grid mdl-grid--no-spacing">
              <h1 class="mdl-card__title-text">Log in</h1>
            </div>
            
          
            <%= form_for(:session, url: login_path) do |f| %>
                <% cl = "" %>
                <% unless flash.nil? then cl = 'mdl-cell mdl-cell--12-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label' %>
                <% else cl = 'mdl-cell mdl-cell--12-col mdl-textfield is-invalid mdl-js-textfield mdl-textfield--floating-label' end %>

                <%= content_tag :div, :class => cl do %>
                    <%= f.email_field :email, class: 'mdl-textfield__input' %>
                    <%= f.label :email, class: 'mdl-textfield__label' %>
                    <% flash.each do |message_type, message| %>
                        <span class="mdl-textfield__error"><%= message %></span>
                    <% end %>
                <% end %>
            
                <%= content_tag :div, :class => cl do %>
                    <%= f.password_field :password, class: 'mdl-textfield__input' %>
                    <%= f.label :password, class: 'mdl-textfield__label' %>
                <% end %>
            
                <%= content_tag :button, :type => :submit, :name => :commit, :class => 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect' do %>
                   Login
                <% end %>

            <% end %>
            
          </div>
        </div>
    </section>
</div>

